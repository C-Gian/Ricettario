<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.journaldev.recyclerviewcardview" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/applist"
        android:roundIcon="@mipmap/applist"
        android:label="AppList"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Main"
            android:label="AppList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddIngredients" />
        <activity
            android:name=".ShoppingCart"
            android:theme="@style/AppTheme"/>
        <activity android:name=".EditRecipe" />
        <activity android:name=".AddDish" />
        <activity android:name=".GroceryList" />
        <activity android:name=".ShowDish" />
    </application>

</manifest>
